<Window
	x:Class="ByFastFlag.ActivationWindow" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	Title="Activate License - ByFastFlag"
	Height="550"
	Width="600"
	WindowStyle="None"
	AllowsTransparency="True"
	Background="#00FFFFFF"
	WindowStartupLocation="CenterScreen"
	ResizeMode="NoResize" xmlns:byfastflag="clr-namespace:ByFastFlag">
	<Grid
		Background="#FF0A0A1A">
		<Grid.RowDefinitions>
			<RowDefinition
				Height="50" />
			<RowDefinition
				Height="*" />
		</Grid.RowDefinitions>
		<Border
			Grid.Row="0"
			Background="#FF151530"
			BorderBrush="#FF2A2A5A"
			BorderThickness="0,0,0,1">
			<Grid>
				<TextBlock
					Text="ACTIVATE LICENSE"
					VerticalAlignment="Center"
					HorizontalAlignment="Center"
					Foreground="#FF00F0FF"
					FontFamily="Segoe UI"
					FontWeight="Bold"
					FontSize="16" />
				<Button
					Name="CloseButton"
					Content="âœ•"
					Width="30"
					Height="30"
					HorizontalAlignment="Right"
					VerticalAlignment="Center"
					Margin="0,0,10,0"
					Background="#00FFFFFF"
					BorderBrush="#00FFFFFF"
					Foreground="#CCCCCC"
					FontSize="14"
					Cursor="Hand" />
			</Grid>
		</Border>
		<Border
			Grid.Row="1"
			Background="#FF151530"
			Padding="30">
			<StackPanel>
				<StackPanel
					Margin="0,0,0,30">
					<TextBlock
						Text="ENTER LICENSE KEY"
						Foreground="#FF00F0FF"
						FontFamily="Segoe UI"
						FontWeight="Bold"
						FontSize="24"
						HorizontalAlignment="Center"
						Margin="0,0,0,10" />
					<TextBlock
						Text="Activate your copy of ByFastFlag"
						Foreground="#FF8888CC"
						FontFamily="Segoe UI"
						FontSize="12"
						HorizontalAlignment="Center"
						Margin="0,0,0,20" />
				</StackPanel>
				<StackPanel
					Margin="0,0,0,20">
					<TextBox
						Name="LicenseKeyTextBox"
						Height="50"
						FontSize="18"
						Foreground="#FFFFFFFF"
						Background="#FF1A1A3A"
						BorderBrush="#FF2A2A5A"
						BorderThickness="1"
						CaretBrush="#FF00F0FF"
						Padding="15,5"
						VerticalContentAlignment="Center"
						TextAlignment="Center"
						MaxLength="29"
						FontFamily="Consolas" />
					<TextBlock
						Text="FORMAT: XXXXX-XXXXX-XXXXX-XXXXX-XXXXX"
						HorizontalAlignment="Center"
						Margin="0,8,0,0"
						Foreground="#FF8888CC"
						FontSize="11"
						FontFamily="Segoe UI" />
				</StackPanel>
				<StackPanel>
					<ProgressBar
						Name="StatusProgress"
						Height="4"
						Background="#FF1A1A3A"
						Foreground="#FF00F0FF"
						Margin="0,0,0,15"
						Visibility="Collapsed" />
					<Border
						Name="StatusMessage"
						CornerRadius="3"
						Padding="15,10"
						Margin="0,0,0,20"
						Visibility="Collapsed"
						Background="#FF1A1A3A"
						BorderBrush="#FF2A2A5A"
						BorderThickness="1">
						<TextBlock
							Name="StatusText"
							TextWrapping="Wrap"
							HorizontalAlignment="Center"
							Foreground="#FFFFFFFF"
							FontSize="12"
							FontFamily="Segoe UI" />
					</Border>
				</StackPanel>
				<StackPanel
					Orientation="Horizontal"
					HorizontalAlignment="Center"
					Margin="0,0,0,30">
					<Button
						Name="ActivateButton"
						Content="ACTIVATE LICENSE"
						Width="200"
						Height="45"
						Background="#FF00F0FF"
						BorderBrush="#00FFFFFF"
						Foreground="#FF0A0A1A"
						FontSize="14"
						FontWeight="Bold"
						FontFamily="Segoe UI"
						Cursor="Hand"
						Margin="0,0,15,0">
						<FrameworkElement.Style>
							<Style
								TargetType="{x:Type Button}">
								<Setter
									Property="Template">
									<Setter.Value>
										<ControlTemplate
											TargetType="{x:Type Button}">
											<Border
												Background="{TemplateBinding Background}"
												CornerRadius="3">
												<ContentPresenter
													HorizontalAlignment="Center"
													VerticalAlignment="Center" />
											</Border>
										</ControlTemplate>
									</Setter.Value>
								</Setter>
								<Style.Triggers>
									<Trigger
										Property="IsEnabled"
										Value="False">
										<Setter
											Property="Background"
											Value="#FF2A2A5A" />
										<Setter
											Property="Foreground"
											Value="#FF8888CC" />
									</Trigger>
									<Trigger
										Property="UIElement.IsMouseOver"
										Value="True">
										<Setter
											Property="Background"
											Value="#FF00D4FF" />
									</Trigger>
								</Style.Triggers>
							</Style>
						</FrameworkElement.Style>
					</Button>
					<Button
						Name="BuyButton"
						Content="GET SUPPORT"
						Width="200"
						Height="45"
						Background="#FF9D00FF"
						BorderBrush="#00FFFFFF"
						Foreground="#FFFFFFFF"
						FontSize="14"
						FontWeight="Bold"
						FontFamily="Segoe UI"
						Cursor="Hand"
						Margin="15,0,0,0">
						<FrameworkElement.Style>
							<Style
								TargetType="{x:Type Button}">
								<Setter
									Property="Template">
									<Setter.Value>
										<ControlTemplate
											TargetType="{x:Type Button}">
											<Border
												Background="{TemplateBinding Background}"
												CornerRadius="3">
												<ContentPresenter
													HorizontalAlignment="Center"
													VerticalAlignment="Center" />
											</Border>
										</ControlTemplate>
									</Setter.Value>
								</Setter>
								<Style.Triggers>
									<Trigger
										Property="UIElement.IsMouseOver"
										Value="True">
										<Setter
											Property="Background"
											Value="#FFB733FF" />
									</Trigger>
								</Style.Triggers>
							</Style>
						</FrameworkElement.Style>
					</Button>
				</StackPanel>
				<Border
					Background="#FF1A1A3A"
					BorderBrush="#FF2A2A5A"
					BorderThickness="1"
					CornerRadius="3"
					Padding="15,10"
					Margin="0,10,0,0">
					<StackPanel>
						<TextBlock
							Text="Need help? Join our Discord server"
							HorizontalAlignment="Center"
							Foreground="#FF8888CC"
							FontSize="11"
							FontFamily="Segoe UI"
							Margin="0,0,0,5" />
						<TextBlock
							Text="discord.gg/H4X7FjuC36"
							HorizontalAlignment="Center"
							Foreground="#FF00F0FF"
							FontSize="11"
							FontWeight="Bold"
							FontFamily="Segoe UI" />
					</StackPanel>
				</Border>
			</StackPanel>
		</Border>
	</Grid>
</Window>
