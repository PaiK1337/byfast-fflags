<Window
	x:Class="ByFastFlag.MainWindow" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	Title="ByFastFlag"
	Height="750"
	Width="1100"
	WindowStyle="None"
	AllowsTransparency="True"
	Background="#00FFFFFF"
	WindowStartupLocation="CenterScreen"
	ResizeMode="NoResize" xmlns:byfastflag="clr-namespace:ByFastFlag">
	<Grid
		Background="#FF0A0A1A">
		<Grid.RowDefinitions>
			<RowDefinition
				Height="60" />
			<RowDefinition
				Height="*" />
			<RowDefinition
				Height="40" />
		</Grid.RowDefinitions>
		<Border
			Grid.Row="0"
			Background="#FF151530"
			BorderBrush="#FF2A2A5A"
			BorderThickness="0,0,0,1">
			<Grid>
				<Grid.ColumnDefinitions>
					<ColumnDefinition
						Width="Auto" />
					<ColumnDefinition
						Width="*" />
					<ColumnDefinition
						Width="Auto" />
				</Grid.ColumnDefinitions>
				<StackPanel
					Grid.Column="0"
					Orientation="Horizontal"
					VerticalAlignment="Center"
					Margin="20,0">
					<TextBlock
						Text="BYFAST"
						Foreground="#FF00F0FF"
						FontFamily="Segoe UI"
						FontWeight="Bold"
						FontSize="32" />
					<TextBlock
						Text="FLAG"
						Foreground="#FF9D00FF"
						FontFamily="Segoe UI"
						FontWeight="Bold"
						FontSize="32" />
				</StackPanel>
				<StackPanel
					Grid.Column="1"
					Orientation="Horizontal"
					HorizontalAlignment="Center"
					VerticalAlignment="Center">
					<Ellipse
						Name="StatusDot"
						Width="10"
						Height="10"
						Fill="#FFFF0000"
						Margin="0,0,10,0" />
					<TextBlock
						Name="StatusText"
						Text="INITIALIZING"
						Foreground="#FFFFFFFF"
						FontFamily="Segoe UI"
						FontWeight="Bold"
						FontSize="14" />
				</StackPanel>
				<StackPanel
					Grid.Column="2"
					Orientation="Horizontal"
					Margin="0,0,10,0">
					<Button
						Name="LicenseInfoButton"
						Content="LICENSE INFO"
						Width="120"
						Height="30"
						Margin="0,0,10,0"
						Background="#FF151530"
						BorderBrush="#FF2A2A5A"
						BorderThickness="1"
						Foreground="#FFFFFFFF" />
					<Button
						Name="MinimizeButton"
						Content="—"
						Width="30"
						Height="30"
						Background="#FF151530"
						BorderBrush="#FF2A2A5A"
						BorderThickness="1"
						Foreground="#FFFFFFFF" />
					<Button
						Name="CloseButton"
						Content="✕"
						Width="30"
						Height="30"
						Background="#FF151530"
						BorderBrush="#FF2A2A5A"
						BorderThickness="1"
						Foreground="#FFFFFFFF" />
				</StackPanel>
			</Grid>
		</Border>
		<Grid
			Row="1">
			<Grid.ColumnDefinitions>
				<ColumnDefinition
					Width="2*" />
				<ColumnDefinition
					Width="*" />
			</Grid.ColumnDefinitions>
			<Border
				Grid.Column="0"
				Background="#FF101025"
				BorderBrush="#FF2A2A5A"
				BorderThickness="1"
				Margin="10,10,5,10">
				<StackPanel
					Margin="20">
					<StackPanel
						Margin="0,0,0,20">
						<TextBlock
							Text="FILE OPERATIONS"
							Foreground="#FF00F0FF"
							FontWeight="Bold"
							FontSize="14"
							Margin="0,0,0,10" />
						<StackPanel
							Orientation="Horizontal"
							Margin="0,0,0,10">
							<Button
								Name="LoadFlagsBtn"
								Content="LOAD FFLAGS FILE"
								Width="200"
								Height="40"
								Margin="0,0,10,0"
								Background="#FF151530"
								BorderBrush="#FF2A2A5A"
								BorderThickness="1"
								Foreground="#FFFFFFFF" />
							<Button
								Name="LoadOffsetsBtn"
								Content="LOAD FFLAG ADDRESSES"
								Width="200"
								Height="40"
								Background="#FF151530"
								BorderBrush="#FF2A2A5A"
								BorderThickness="1"
								Foreground="#FFFFFFFF" />
						</StackPanel>
						<StackPanel
							Orientation="Horizontal"
							Margin="0,0,0,5">
							<TextBlock
								Text="FFlags File:"
								Foreground="#FFB0B0FF"
								Width="120" />
							<TextBlock
								Name="FlagsPathText"
								Text="Not loaded"
								Foreground="#FFFFFFFF"
								FontWeight="Bold" />
						</StackPanel>
						<StackPanel
							Orientation="Horizontal">
							<TextBlock
								Text="FFlags.hpp:"
								Foreground="#FFB0B0FF"
								Width="120" />
							<TextBlock
								Name="OffsetsPathText"
								Text="Not loaded"
								Foreground="#FFFFFFFF"
								FontWeight="Bold" />
						</StackPanel>
					</StackPanel>
					<StackPanel
						Margin="0,0,0,20">
						<TextBlock
							Text="SYSTEM STATISTICS"
							Foreground="#FF00F0FF"
							FontWeight="Bold"
							FontSize="14"
							Margin="0,0,0,10" />
						<Grid>
							<Grid.ColumnDefinitions>
								<ColumnDefinition
									Width="*" />
								<ColumnDefinition
									Width="*" />
								<ColumnDefinition
									Width="*" />
							</Grid.ColumnDefinitions>
							<Border
								Grid.Column="0"
								Background="#FF1A1A3A"
								Margin="5"
								Padding="15">
								<StackPanel>
									<TextBlock
										Text="FFLAGS LOADED"
										Foreground="#FF8888CC"
										HorizontalAlignment="Center" />
									<TextBlock
										Name="FlagsCountText"
										Text="0"
										Foreground="#FFFFFFFF"
										FontWeight="Bold"
										FontSize="16"
										HorizontalAlignment="Center" />
								</StackPanel>
							</Border>
							<Border
								Grid.Column="1"
								Background="#FF1A1A3A"
								Margin="5"
								Padding="15">
								<StackPanel>
									<TextBlock
										Text="OFFSETS LOADED"
										Foreground="#FF8888CC"
										HorizontalAlignment="Center" />
									<TextBlock
										Name="OffsetsCountText"
										Text="0"
										Foreground="#FFFFFFFF"
										FontWeight="Bold"
										FontSize="16"
										HorizontalAlignment="Center" />
								</StackPanel>
							</Border>
							<Border
								Grid.Column="2"
								Background="#FF1A1A3A"
								Margin="5"
								Padding="15">
								<StackPanel>
									<TextBlock
										Text="ROBLOX PROCESSES"
										Foreground="#FF8888CC"
										HorizontalAlignment="Center" />
									<TextBlock
										Name="RobloxCountText"
										Text="0"
										Foreground="#FFFFFFFF"
										FontWeight="Bold"
										FontSize="16"
										HorizontalAlignment="Center" />
								</StackPanel>
							</Border>
						</Grid>
					</StackPanel>
					<StackPanel>
						<TextBlock
							Text="INJECTION PROGRESS"
							Foreground="#FF00F0FF"
							FontWeight="Bold"
							FontSize="14"
							Margin="0,0,0,10" />
						<ProgressBar
							Name="ProgressBar"
							Height="20"
							Background="#FF1A1A3A"
							Foreground="#FF00F0FF"
							Margin="0,0,0,5" />
						<TextBlock
							Name="ProgressText"
							Text="Waiting for operation..."
							Foreground="#FF8888CC"
							HorizontalAlignment="Center" />
					</StackPanel>
				</StackPanel>
			</Border>
			<Border
				Grid.Column="1"
				Background="#FF101025"
				BorderBrush="#FF2A2A5A"
				BorderThickness="1"
				Margin="5,10,10,10">
				<Grid
					Margin="20">
					<Grid.RowDefinitions>
						<RowDefinition
							Height="Auto" />
						<RowDefinition
							Height="*" />
						<RowDefinition
							Height="Auto" />
					</Grid.RowDefinitions>
					<StackPanel
						Grid.Row="0"
						Orientation="Horizontal"
						Margin="0,0,0,10">
						<TextBlock
							Text="SYSTEM LOG"
							Foreground="#FF00F0FF"
							FontWeight="Bold"
							FontSize="14" />
						<Button
							Name="ClearLogBtn"
							Content="CLEAR LOG"
							Width="100"
							Height="30"
							Margin="10,0,0,0"
							HorizontalAlignment="Right"
							Background="#FF151530"
							BorderBrush="#FF2A2A5A"
							BorderThickness="1"
							Foreground="#FFFFFFFF" />
					</StackPanel>
					<Border
						Grid.Row="1"
						Background="#FF0A0A1A"
						BorderBrush="#FF2A2A5A"
						BorderThickness="1"
						Margin="0,0,0,10">
						<ScrollViewer
							VerticalScrollBarVisibility="Auto">
							<TextBox
								Name="LogTextBox"
								Background="#00FFFFFF"
								BorderThickness="0"
								IsReadOnly="True"
								TextWrapping="Wrap"
								FontFamily="Consolas"
								FontSize="11"
								Foreground="#FFFFFFFF"
								Text="[SYSTEM] ByFastFlag initialized" />
						</ScrollViewer>
					</Border>
					<StackPanel
						Grid.Row="2">
						<TextBlock
							Text="BYFASTFLAG v2.1"
							Foreground="#FF8888CC"
							HorizontalAlignment="Center" />
						<TextBlock
							Text="SYSTEM STATUS: ONLINE"
							Foreground="#FF00F0FF"
							FontWeight="Bold"
							FontSize="10"
							HorizontalAlignment="Center" />
					</StackPanel>
				</Grid>
			</Border>
		</Grid>
		<Border
			Grid.Row="2"
			Background="#FF151530"
			BorderBrush="#FF2A2A5A"
			BorderThickness="0,1,0,0">
			<StackPanel
				Orientation="Horizontal"
				HorizontalAlignment="Center"
				VerticalAlignment="Center">
				<TextBlock
					Text="CONNECTION: "
					Foreground="#FFB0B0FF"
					Margin="0,0,5,0" />
				<TextBlock
					Text="ESTABLISHED"
					Foreground="#FF00F0FF"
					FontWeight="Bold" />
				<TextBlock
					Text=" | "
					Foreground="#FFB0B0FF"
					Margin="10,0,10,0" />
				<TextBlock
					Text="SYSTEM TIME: "
					Foreground="#FFB0B0FF"
					Margin="0,0,5,0" />
				<TextBlock
					Name="TimeDisplay"
					Text="00:00:00"
					Foreground="#FFFFFFFF" />
			</StackPanel>
		</Border>
	</Grid>
</Window>
